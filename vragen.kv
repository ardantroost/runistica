#: import vragen vragen

<AntwButton@Button>
	background_color: 1,1,1,0
	background_normal:""
	canvas.before:
		Color:
			rgba: [1,1,1,1]
		RoundedRectangle:
			size: self.size
			pos:self.pos
			radius: [8]
	font_size: dp(14)
	halign:"left"
	valign:"center"
	color:0,0,0,1

<AnchorButton@Button>:
	text: ""
	size_hint:None,None
	size: 50,30
	color:[1,1,1,1]
	#was  dp(10)
	font_size:dp(28)
	background_color:1,1,1,0

<VragenScreen>:

	canvas:
		Color:
			rgba: [1,0,0,1]
		Rectangle:
			size:self.width, self.height
			source:"Pics/Olaus.jpg"

	BoxLayout:
		orientation: "vertical"
		size_hint:(1,.2)
		pos_hint:{"center_y":.75}

		Label:
			text: "Training\n runesymbols"
			halign:"center"
			font_size:dp(28)

	BoxLayout:
		orientation:"vertical"
		size_hint:(1,.2)
		pos_hint:{"center_y":.63}

		Image:
			id:_PictureChoice
			source:""
			background_color: 1,1,1,0
			background_normal:""

			canvas.before:
				Color:
					rgba:1,1,1,1
				Ellipse:
					size: 180,180
					pos:self.parent.center_x-90,self.parent.center_y-180

			size_hint:None,None
			width:130
			height:130
			allow_stretch:True
			keep_ratio:False
			pos_hint:{"center_x":.5}

	BoxLayout:
		orientation: "vertical"
		size_hint:(1,.1)
		pos_hint:{"center_y":.4}

		Label:
			id:_Vraag_label
			text:"What's the name of\n this rune...?"
			font_size:dp(16)
			halign:"center"
			valign:"bottom"
			color: 1,1,1,1

	BoxLayout:
		orientation: "vertical"
		size_hint:(1,.3)

		GridLayout:
			cols:2
			padding:25
			spacing:25
			size_hint:(1,.2)

			AntwButton:
				id: _antw1
				text: ""
				on_release:
					root.ClearButtons()
					self.background_color = 1,0,0,.3
					root.PressedButton(self.text)
			AntwButton:
				id: _antw2
				text: ""
				on_release:
					root.ClearButtons()
					self.background_color = 1,0,0,.3
					root.PressedButton(self.text)
			AntwButton:
				id: _antw3
				text: ""
				on_release:
					root.ClearButtons()
					self.background_color = 1,0,0,.3
					root.PressedButton(self.text)
			AntwButton:
				id: _antw4
				text: ""
				on_release:
					root.ClearButtons()
					self.background_color = 1,0,0,.3
					root.PressedButton(self.text)

		Button:
			text: "<< Submit >>"
			font_size:dp(14)
			size_hint:(.33,.05)
			background_color:1,1,1,.1
			pos_hint:{"center_x":.5}
			on_release:
				root.ClearButtons()
				root.SubmittAnswer()

	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:
			orientation: 'horizontal'
			padding:40
			spacing: 50
			size_hint: None, None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				font_size:dp(14)
				on_release:
					# voortijdig afbreken dus reset quizzvariabelen
					root.CleanUp()
					root.manager.current="menuscreen"

			AnchorButton:
				text: "Quit"
				font_size:dp(14)
				on_release:
					quit()

