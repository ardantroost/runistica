#: import CollegeSymbols CollegeSymbols
#: import FallOutTransition kivy.uix.screenmanager.FallOutTransition

<Labeltje@Label>:
	canvas:
		Color:
			rgba: 1,0,1,.3
		Rectangle:
			size: self.width-5, self.height-5
			pos:self.pos
	Label:
		text:""
		text_size:(75,None)
		font_size: 13
		color: [1,1,1,1]
		halign: "left"
		valign: "center"

<Imagetje@Image>:
	canvas:
		Color:
			rgba: 1,0,1,.3
		Rectangle:
			size: self.width-5, self.height-5
			pos:self.pos
		Ellipse:
			size: self.width-6, self.height-15
			pos:self.pos


<CollegeSymbolsScreen>:
	transition:FallOutTransition
	canvas:
		Color:
			rgba: [1,0,1,.7]
		Rectangle:
			size:(self.width,self.height)
			pos:self.x,self.y
			source:"Pics/road.jpg"

	BoxLayout:
		orientation:"vertical"
		size_hint:(1,.05)
		pos_hint:{"center_x":.5,"center_y":.75}

		Label:
			text: "College RuneSymbols"
			font_size: 18
			bold:True
			size_hint: (1,0.2)
			pos_hint:{"center_x":.5,  "center_y":.7}

	BoxLayout:

		id: _box
		orientation:"vertical"
		size_hint:(.75,.60)
		pos_hint:{"center_x":.5,"center_y":.45}
		padding:25

		canvas:
			Color:
				rgba: 1,0,0,0
			Rectangle:
				size: self.width, self.height
				pos: self.pos

		GridLayout:
			cols:2
			canvas:
				Color:
					rgba: 1,0,0,.3
				Rectangle:
					size: self.width-112, self.height-5
					pos:self.pos
			Carousel:
				id:_CarouselSelf
				direction: "right"
				loop:True

			Labeltje:
				id: _naam
				text:""
				font_size:20
				halign:"left"
				bold:True

		Labeltje:
			id: _symbol
			text:""
			size_hint:(1,.4)
			text_size:(125,None)
			font_size:12
			halign:"left"

		Labeltje:
			id: _meaning
			text: ""
			text_size:(125,None)
			font_size:12
			halign:"left"
			size_hint:(1,1)

	BoxLayout:
		size_hint:(.75,.15)
		pos_hint:{"center_x":.5,"center_y":.1}
		padding:5
		spacing:5

		Button:
			text:"<<"
			background_normal: ""
			background_color:1,1,1,0
			font_size:48
			on_press:
				self.color=(1,0,0,1)
			on_release:
				self.color=(1,1,1,1)
				_CarouselSelf.load_previous()
				root.stripper("previous_slide")

		Button:
			text:">>"
			background_color:1,1,1,0
			font_size:48
			on_press:
				self.color=(1,0,0,1)
			on_release:
				_CarouselSelf.load_next(mode='next')
				self.color=(1,1,1,1)
				root.stripper("next_slide")

	Label:
		id:_labelx
		text:""
		font_size:24
		color:1,0,0,1
		pos_hint:{"center_x":.5,"center_y":.1}
		size_hint:(1,1)

	BoxLayout:
		orientation: 'vertical'
		size_hint:(1,.1)
		pos_hint:{"center_x":.5,"center_y":.05}
		padding:15


	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:

			orientation: 'horizontal'
			padding:15
			size_hint: None,None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				on_release:
					root.manager.current="menuscreen"
					#root.manager.transition=FallOutTransition(duration=1)

			AnchorButton:
				text: "Quit"
				on_release:
					quit()




