<Pie1@Label>:

	size_hint:None,None
	width:70
	height:70
	text: str(format((self.level),".1f")) + "%"
	color:0,0,0,.8
	font_size:dp(8)
	# dummy voor scoreniveau
	level: 0
	pos_hint:{"center_x":.5,"center_y":0.05}

	canvas.before:
		Color:
			rgba:1,0,0,.5
		Ellipse:
			size: self.size
			pos:self.pos
		Color:
			rgba:0,0,0,.95
		Ellipse:
			size: self.size
			pos:self.pos
			angle_end: self.level
		Color:
			rgba:1,1,1,1
		Ellipse:
			size: self.width-60,self.height-60
			pos:self.center_x-(self.width-60)/2, self.center_y-(self.height-60)/2

