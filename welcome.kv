#: import welcome welcome

<WelcomeScreen>:
	FloatLayout:
		canvas:
			Color:
				rgba: [0,0,1,1]
			Rectangle:
				size:self.width, self.height
				pos:self.x,self.y
				source:"Pics/Olaus.jpg"
			Color:
				rgba: [1,1,1,1]

			Ellipse:
				size:1000,1000
				pos:self.center_x-500,-500

			Ellipse:
				id:_LogoRunistica
				size: 400,300
				pos:self.center_x-150, 150
				source: "Pics/logorunistica.png"

		Label:
			text: "Master of runes\n [size=28]Learn to read the secret Runes[/size]"
			font_size: dp(36)
			color:1,1,1,1
			halign: "center"
			markup: True

	AnchorLayout:
		anchor_x: "center"
		anchor_y: "bottom"

		AnchorButton:
			id:_start
			canvas:
				Color:
					rgba: 0,0,1,.1
				Ellipse:
					size:[90,90]
					pos: self.center_x-45, self.center_y-45
			text: "Start"
			font_size:dp(18)
			bold:True
			color:[0,0,0,.75]
			background_color:[0,0,0,0]
			size_hint:(1,.1)
			on_press:
				color = [1,0,0,1] if _start.state == "active" else [0,1,1,.75]
				root.manager.current = "menuscreen"
				root.manager.transition.direction = "down"


