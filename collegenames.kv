#: import collegenames collegenames

<CollegeNamesScreen>:
	canvas:
		Color:
			rgba: 1,0,0,1
		Rectangle:
			size: self.width, self.height
			pos: self.pos
			source:"Pics/road.jpg"

		Color:
			rgba: 0,0,0,1

	BoxLayout:
		orientation: "vertical"
		size_hint:(.5, .1)
		pos_hint:{"center_x":.5,"center_y":.85}
		Label:
			text:"Swipe\n the right combination"
			font_size:"12dp"

	BoxLayout:
		orientation: "vertical"
		size_hint:(.35,.45)
		pos_hint:{"center_x":.5,"center_y":.5}
		spacing:15

		Carousel:
			id: _Carou1
			size_hint:(1,.1)
			loop:True

			canvas:
				Color:
					rgba: 1,1,1,1
				Rectangle:
					size: self.width, self.height
					pos:self.pos
		Carousel:
			id: _Carou2
			size_hint:(1,.1)
			loop:True

			canvas:
				Color:
					rgba: 1,1,1,.6
				Rectangle:
					size: self.width, self.height
					pos:self.pos

	BoxLayout:
		orientation: "vertical"
		size_hint:(.5,.05)
		pos_hint:{"center_x":.5,"center_y":.15}

		Button:
			size_hint: (1,.2)
			text: "Check"
			font_size:"12dp"
			on_release:
				root.Checkcombination(_Carou1.index)

	BoxLayout:
		orientation: "horizontal"
		size_hint:(.75, .1)
		pos_hint:{"center_x":.5,"center_y":.10}

		Label:
			size_hint: (1,.3)
			id:_result1
			text:""
			font_size:"12dp"
			halign:"right"

		Label:
			size_hint: (1,.3)
			id:_result2
			text:""
			font_size:"12dp"
			halign:"left"

	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:

			orientation: 'horizontal'
			padding:15
			size_hint: None,None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				font_size:"10dp"
				on_release:
					root.manager.current="menuscreen"

			AnchorButton:
				text: "Quit"
				font_size:"10dp"
				on_release:
					quit()
