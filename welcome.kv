#: import welcome welcome

<WelcomeScreen>:
	FloatLayout:
		canvas:
			Color:
				rgba: [0,0,1,1]
			Rectangle:
				size:self.width, self.height
				pos:self.x,self.y
				source:"Pics/Olaus.jpg"
			Color:
				rgba: [1,1,1,1]

			Ellipse:
				size:1000,1000
				pos:self.center_x-500,-500

			Ellipse:
				id:_LogoRunistica
				size: 400,300
				pos:self.center_x-150, 150
				source: "Pics/logorunistica.png"

		Label:
			text: "Master of runes\n [size=28]Learn to read the secret Runes[/size]"
			font_size: dp(36)
			color:1,1,1,1
			halign: "center"
			markup: True

	AnchorLayout:
		anchor_x: "center"
		anchor_y: "bottom"

		BoxLayout:
			orientation: 'horizontal'
			size_hint: .5,1

			Button:
				size_hint:(.25,.1)
				pos_hint:{"center_x":.5}
				background_color:0,0,0,0

				on_press:
					root.manager.taalkeuze("Engels")
					root.manager.current = "menuscreen"
					root.manager.transition.direction = "down"
				Image:
					source:"Pics/FlagofGreatBritain.png"
					center_x:self.parent.center_x
					center_y:self.parent.center_y
			Button:
				size_hint:(.25,.1)
				pos_hint:{"center_x":.5}
				background_color:0,0,0,0
				on_press:
					root.manager.taalkeuze("Frans")
					root.manager.current = "menuscreen"
					root.manager.transition.direction = "down"
				Image:
					source:"Pics/FlagofFrance.png"
					center_x:self.parent.center_x
					center_y:self.parent.center_y
			Button:
				size_hint:(.25,.1)
				pos_hint:{"center_x":.5}
				background_color:0,0,0,0

				on_press:
					root.manager.taalkeuze("Duits")
					root.manager.current = "menuscreen"
					root.manager.transition.direction = "down"

				Image:
					source:"Pics/FlagofGermany.png"
					center_x:self.parent.center_x
					center_y:self.parent.center_y
			Button:
				size_hint:(.25,.1)
				pos_hint:{"center_x":.5}
				background_color:0,0,0,0
				on_press:
					root.manager.taalkeuze("Nederlands")
					root.manager.current = "menuscreen"
					root.manager.transition.direction = "down"

				Image:
					source:"Pics/FlagofHolland.png"
					center_x:self.parent.center_x
					center_y:self.parent.center_y
