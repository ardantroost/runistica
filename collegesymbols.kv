#: import collegesymbols collegesymbols
#: import FallOutTransition kivy.uix.screenmanager.FallOutTransition

<Labeltje@Label>:
	canvas:
		Color:
			rgba: 1,0,1,.3
		Rectangle:
			size: self.width-5, self.height-5
			pos:self.pos
	Label:
		text:""
		text_size:(75,None)
		font_size: dp(14)
		color: [1,1,1,1]
		halign: "left"
		valign: "center"

<CollegeSymbolsScreen>:
	transition:FallOutTransition
	canvas:
		Color:
			rgba: [1,0,1,.3]
		Rectangle:
			size:(self.width,self.height)
			pos:self.x,self.y
			source:"Pics/Runenmaster.png"

	BoxLayout:
		orientation:"vertical"
		size_hint:(1,.05)
		pos_hint:{"center_x":.5,"center_y":.8}

		Label:
			text: "Library\n Futhark runes"
			font_size: dp(28)
			halign:"center"
			bold:True
			size_hint: (1,0.2)
			pos_hint:{"center_x":.5,  "center_y":.65}

		Label:
			size_hint: (1,1)


	BoxLayout:
		id: _box
		orientation:"vertical"
		size_hint:(.90,.60)
		pos_hint:{"center_x":.5,"center_y":.45}
		padding:50

		canvas:
			Color:
				rgba: 1,0,0,0
			Rectangle:
				size: self.width, self.height
				pos: self.pos

		GridLayout:
			cols:2
			Carousel:
				id:_CarouselSelf
				direction: "right"
				loop:True

				canvas:
					Color:
						rgba: 1,0,0,.3
					Rectangle:
						size: self.width-2.5, self.height-2.5
						pos:self.pos
			BoxLayout:
				orientation:"vertical"
				canvas:
					Color:
						rgba: 1,0,1,.3
					Rectangle:
						size: self.width-5, self.height-5
						pos:self.pos
				Label:
					id: _naam
					text:""
					font_size:dp(26)
					halign:"center"
					bold:True
					size_hint:1,.8
					pos_hint_y:{"center_y":.35}

				Label:
					id: _reverse
					text:""
					font_size:dp(12)
					size_hint:1,.2

			BoxLayout:
				orientation:"vertical"
				padding:20
				canvas:
					Color:
						rgba: 1,0,1,.3
					Rectangle:
						size: self.width-5, self.height-5
						pos:self.pos
				Label:
					text:"Symbolization"
					font_size:dp(16)
					bold:False
					halign:"center"
					size_hint:(1,.5)

				Label:
					id: _symbol
					text:""
					size_hint:(1,.5)
					text_size:(240,None)
					font_size:dp(14)
					halign:"center"


			BoxLayout:
				orientation:"vertical"
				padding:20
				canvas:
					Color:
						rgba: 1,0,1,.3
					Rectangle:
						size: self.width-5, self.height-5
						pos:self.pos
				Label:
					text:"Interpretation"
					font_size:dp(16)
					bold:False
					halign:"center"
					valign:"bottom"
					size_hint:(1,.5)
				Label:
					id: _meaning
					text: ""
					text_size:(240,None)
					font_size:dp(14)
					halign:"center"
					size_hint:(1,.5)

	BoxLayout:
		size_hint:(.75,.15)
		pos_hint:{"center_x":.5,"center_y":.1}
		padding:5
		spacing:5

		Button:
			text:"<<"
			background_normal: ""
			background_color:1,1,1,0
			font_size:"48dp"
			on_press:
				self.color=(1,0,0,1)
			on_release:
				self.color=(1,1,1,1)
				_CarouselSelf.load_previous()
				root.stripper("previous_slide")

		Button:
			text:">>"
			background_color:1,1,1,0
			font_size:dp(48)
			on_press:
				self.color=(1,0,0,1)
			on_release:
				_CarouselSelf.load_next(mode='next')
				self.color=(1,1,1,1)
				root.stripper("next_slide")

	Label:
		id:_labelx
		text:""
		font_size:dp(36)
		color:1,0,0,1
		pos_hint:{"center_x":.5,"center_y":.1}
		size_hint:(1,1)

	BoxLayout:
		orientation: 'vertical'
		size_hint:(1,.1)
		pos_hint:{"center_x":.5,"center_y":.05}
		padding:15


	ActionBar:
		size:self.width, 50
		pos_hint:{"top":1}

		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos

		ActionView:
			id: _toolbar
			spacing:20

			ActionPrevious:
				color:0,0,0,1
				title:"[size=16]Academy of RunenMaster[/size]"
				markup:True
				with_previous:False
				app_icon:"icon.png"
				app_icon_height:50
				app_icon_width:50

			ActionButton:
				icon:"Pics/home.png"
				background_color:1,0,1,.85
				text:"Stats"
				font_size:dp(14)
				on_release:
					root.manager.current="menuscreen"

			ActionButton:
				icon:"Pics/graph.png"
				background_color:1,0,1,.85
				text:"Stats"
				font_size:dp(14)
				on_release:
					root.manager.current="statsscreen"

			ActionButton:
				icon:"Pics/close.png"
				background_color:1,0,1,.85
				text:"Exit"
				font_size:dp(14)
				on_release:
					quit()




