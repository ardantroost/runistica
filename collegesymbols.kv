#: import collegesymbols collegesymbols
#: import FallOutTransition kivy.uix.screenmanager.FallOutTransition

<Labeltje@Label>:
	canvas:
		Color:
			rgba: 1,0,1,.3
		Rectangle:
			size: self.width-5, self.height-5
			pos:self.pos
	Label:
		text:""
		text_size:(75,None)
		font_size: dp(14)
		color: [1,1,1,1]
		halign: "left"
		valign: "center"

<CollegeSymbolsScreen>:
	transition:FallOutTransition
	canvas:
		Color:
			rgba: [1,0,1,.1]
		Rectangle:
			size:(self.width,self.height)
			pos:self.x,self.y
			source:"Pics/Runenmaster.png"

	BoxLayout:
		orientation:"vertical"
		size_hint:(1,.05)
		pos_hint:{"center_x":.5,"center_y":.8}

		Label:
			text: "College\n RuneSymbols"
			font_size: dp(28)
			halign:"center"
			bold:True
			size_hint: (1,0.2)
			pos_hint:{"center_x":.5,  "center_y":.7}

		Label:
			size_hint: (1,1)


	BoxLayout:
		id: _box
		orientation:"vertical"
		size_hint:(.75,.60)
		pos_hint:{"center_x":.5,"center_y":.45}
		padding:10

		canvas:
			Color:
				rgba: 1,0,0,0
			Rectangle:
				size: self.width, self.height
				pos: self.pos

		GridLayout:
			cols:2
			Carousel:
				id:_CarouselSelf
				direction: "right"
				loop:True

				canvas:
					Color:
						rgba: 1,0,0,.3
					Rectangle:
						size: self.width-5, self.height-5
						pos:self.pos
			Labeltje:
				id: _naam
				text:""
				font_size:dp(28)
				halign:"left"
				bold:True

			Labeltje:
				id: _symbol
				text:""
				size_hint:(1,.4)
				text_size:(250,None)
				font_size:dp(16)
				halign:"left"

			Labeltje:
				id: _meaning
				text: ""
				text_size:(250,None)
				font_size:dp(16)
				halign:"left"
				size_hint:(1,1)

	BoxLayout:
		size_hint:(.75,.15)
		pos_hint:{"center_x":.5,"center_y":.1}
		padding:5
		spacing:5

		Button:
			text:"<<"
			background_normal: ""
			background_color:1,1,1,0
			font_size:"48dp"
			on_press:
				self.color=(1,0,0,1)
			on_release:
				self.color=(1,1,1,1)
				_CarouselSelf.load_previous()
				root.stripper("previous_slide")

		Button:
			text:">>"
			background_color:1,1,1,0
			font_size:dp(48)
			on_press:
				self.color=(1,0,0,1)
			on_release:
				_CarouselSelf.load_next(mode='next')
				self.color=(1,1,1,1)
				root.stripper("next_slide")

	Label:
		id:_labelx
		text:""
		font_size:dp(36)
		color:1,0,0,1
		pos_hint:{"center_x":.5,"center_y":.1}
		size_hint:(1,1)

	BoxLayout:
		orientation: 'vertical'
		size_hint:(1,.1)
		pos_hint:{"center_x":.5,"center_y":.05}
		padding:15


	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:

			orientation: 'horizontal'
			padding:40
			spacing: 50
			size_hint: None,None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				font_size:dp(14)
				on_release:
					root.manager.current="menuscreen"


			AnchorButton:
				text: "Quit"
				font_size:dp(14)
				on_release:
					quit()




