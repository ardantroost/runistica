#: import quizz quizz

<QuizzScreen>:
	BoxLayout:
		orientation: "vertical"
		padding:20

		canvas:
			Color:
				rgba:0,1,0,.6
			Rectangle:
				size: (self.width, self.height)
				pos:self.pos
				source:"Pics/road.jpg"
			Color:
				rgba:1,1,1,1

		Label:
			id: _scherm
			text: ""
			font_size:"12dp"
			halign: "center"
			pos_hint: {"center_x":.5, "top":1}

		FloatLayout:

			Button:
				text: "<< home"
				background_normal:''
				background_color:[1,0,0,0]
				font_size:"12dp"
				size_hint:None,None
				size: 100,20
				pos:20,50
				on_release:
					root.manager.current= "menuscreen"
					root.manager.transition.direction = "right"
			Button:
				text: "Start training >>"
				font_size:"12dp"
				background_normal:''
				background_color:[1,0,0,0]
				size_hint:None,None
				size: 100,20
				pos: 220,50

				on_press:
					background_color: [1,0,0,.5]

				on_release:
					root.manager.current = "vragenscreen"


			Button:
				canvas:
					Line:
						rounded_rectangle:(self.x-5,self.y ,75 ,20, 10)
						width:1
				text: "<< Exit >>"
				font_size:"12dp"
				background_normal:''
				background_color:[1,0,0,0]
				size_hint:None,None
				size: 75,20
				pos: 270,555
				on_release:	quit()

