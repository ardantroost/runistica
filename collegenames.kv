#: import collegenames collegenames

<CollegeNamesScreen>:
	canvas:
		Color:
			rgba: 1,0,0,1
		Rectangle:
			size: self.width, self.height
			pos: self.pos
			source:"Pics/road.jpg"
			#source:"Pics/Runenlessons.png"


		Color:
			rgba: 0,0,0,1

	BoxLayout:
		orientation: "vertical"
		size_hint:(.5, .1)
		pos_hint:{"center_x":.5,"center_y":.75}
		Label:
			text:"Swipe\n the right combination"
			font_size:dp(16)
			halign:"center"
			bold:True

	BoxLayout:
		orientation: "vertical"
		size_hint:(.35,.5)
		pos_hint:{"center_x":.5,"center_y":.45}
		spacing:15

		Carousel:
			id: _Carou1
			size_hint:(1,.1)
			loop:True

			canvas:
				Color:
					rgba: 1,1,1,1
				Rectangle:
					size: self.width, self.height
					pos:self.pos

		Carousel:
			id: _Carou2
			size_hint:(1,.1)
			loop:True

			canvas:
				Color:
					rgba: 1,1,1,.6
				Rectangle:
					size: self.width, self.height
					pos:self.pos

	BoxLayout:
		orientation: "horizontal"
		size_hint:(.35,.05)
		pos_hint:{"center_x":.5,"center_y":.15}
		spacing:15

		Button:
			text: "Check"
			font_size:dp(14)
			on_release:
				root.Checkcombination(_Carou1.index)
		Label:
			id:_score
			text:""
			font_size:dp(14)
			pos_hint:{"center_x":.5}

	BoxLayout:
		orientation: "horizontal"
		size_hint:(.75, .1)
		pos_hint:{"center_x":.5,"center_y":.05}

		Label:
			#size_hint: (1,.3)
			id:_result1
			text:""
			font_size:dp(14)
			halign:"center"


	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:

			orientation: 'horizontal'
			padding:40
			spacing: 50
			size_hint: None,None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				font_size:dp(14)
				on_release:
					root.manager.current="menuscreen"

			AnchorButton:
				text: "Quit"
				font_size:dp(14)
				on_release:
					quit()
