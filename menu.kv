#: import menu menu

<CBox@CheckBox>:
	canvas.before:
		Color:
			rgba: 1,1,1,.8
		Ellipse:
			#size:[45,45]
			size:[60,60]
			#pos: self.center_x-22.5, self.center_y-22.5
			pos: self.center_x-30, self.center_y-30

	group: "training"
	color: 1,0,1,1
	size_hint:(.1,.22)

<AnchorButton@Button>:

	text: ""
	size_hint:None,None
	size: 50,30
	color:[1,1,1,1]
	font_size:dp(12)
	background_normal: ''
	background_color:[1,1,1,0]

<MenuScreen>:
	canvas:
		Color:
			rgba: [1,0,1,.75]
		Rectangle:
			size:(self.width,self.height)
			pos:self.x,self.y
			source:"Pics/Runenlessons.png"

	BoxLayout:
		orientation: "vertical"
		padding:10
		size_hint:(1,.4)
		pos_hint:{"center_x":.5,"center_y":.75}

		Label:
			id: _page1header
			text: "Testcenter\n [size=24]Tests to become a Master in Runes[/size]"
			font_size:dp(32)
			markup:True
			halign:"center"
			size_hint:(1,.3)

		BoxLayout:
			size_hint: (1,.2)
			Label:
				id:_label_testrunes
				text:"Runesymbols"
				font_size:dp(14)
				size_hint:(.4,.5)
				halign:"right"

			CBox:
				id:_Symbols_but
				on_active:
					root.Trainingskeuze="Runesymbols"
					_ButtonStart.text = "Start\ntest" if root.lanquage == "Engels" else ("Commence\nl'examen" if root.lanquage == "Frans"
					else "Test\nstarten" if root.lanquage == "Nederlands" else "Prüfung\nstarten")
			Label:
				text:''
				size_hint:(.2,.5)
		BoxLayout:
			size_hint: (1,.2)
			Label:
				id:_label_testnames
				text:"Runenames"
				font_size:dp(14)
				size_hint:(.4,.5)
				halign:"right"

			CBox:
				id:_Names_but
				on_active:
					root.Trainingskeuze = "SymbolNames"
					_ButtonStart.text = "Start\ntest" if root.lanquage == "Engels" else ("Commence\nl'examen" if root.lanquage == "Frans"
					else "Test\nstarten" if root.lanquage == "Nederlands" else "Prüfung\nstarten")
			Label:
				text:''
				size_hint:(.2,1)
		BoxLayout:
			size_hint: (1,.2)

			Label:
				id:_label_testmeaning
				text:"Meaning of Runes"
				font_size:dp(14)
				size_hint:(.4,.5)
				halign:"right"

			CBox:
				id:_Meaning_but
				on_active:
					root.Trainingskeuze="Meaning of Runes"
					_ButtonStart.text = "Start\ntest" if root.lanquage == "Engels" else ("Commence\nl'examen" if root.lanquage == "Frans"
					else "Test\nstarten" if root.lanquage == "Nederlands" else "Prüfung\nstarten")

			Label:
				text:''
				size_hint:(.2,.5)

	BoxLayout:
		orientation: "vertical"
		padding:10
		size_hint: (1,.35)
		pos_hint:{"center_x":0.5, "center_y":.33}

		Label:
			id:_Header_college
			text: "Academy for Runes\n [size=24]Select a college to learn Runes[/size]"
			font_size:dp(32)
			markup:True
			halign:"center"
			size_hint:(1,.3)
		BoxLayout:
			size_hint: (1,.17)
			Label:
				id:_label_library
				text:"Library for Runes "
				font_size:dp(14)
				size_hint:(.4,.5)
				halign:"right"

			CBox:
				id:_Symbols_college
				on_active:
					root.Trainingskeuze="College Symbols"
					_ButtonStart.text = "See\nlibrary" if root.lanquage == "Engels" else ("Voir\nbibliothèque" if root.lanquage == "Frans"
					else "Naar\nBiblio" if root.lanquage == "Nederlands" else "Zur\nBibliothek")
			Label:
				text:''
				size_hint:(.2,.5)

		BoxLayout:
			size_hint: (1,.17)
			Label:
				id:_label_practicum
				text:"Practicum"
				font_size:dp(14)
				size_hint:(.4,.5)
				halign:"right"

			CBox:
				id:_Names_college
				on_active:
					root.Trainingskeuze="College Names"
					_ButtonStart.text = "To\nthe Practice" if root.lanquage == "Engels" else ("Vers\nla pratique" if root.lanquage == "Frans"
					else "Naar\nPracticum" if root.lanquage == "Nederlands" else "Zur\nPraxis")
			Label:
				text:''
				size_hint:(.2,.5)

		BoxLayout:
			size_hint: (1,.17)
			Label:
				id:_label_personaladvice
				text:"Personal advice"
				font_size:dp(14)
				size_hint:(.4,.5)
				halign:"right"


			CBox:
				id:_advice_college
				on_active:
					root.Trainingskeuze="Personal Advice"
					_ButtonStart.text = "See\nAdvice" if root.lanquage == "Engels" else ("Vers\nconseils" if root.lanquage == "Frans"
					else "Zie\nAdvies" if root.lanquage == "Nederlands" else "Siehe\nBeratung")
			Label:
				text:''
				size_hint:(.2,.5)

	Button:
		id:_ButtonStart
		text:"Choose"
		font_size:dp(14)
		halign:"center"
		color: 1,1,1,1
		background_color: 1,1,1,0
		size_hint: (.4,.25)
		pos_hint:{"center_x":.5, "center_y":.05}
		on_press:
			self.color=[0,0,0,1]
			root.transport()

		canvas.before:
			Color:
				rgba: 1,1,1,.5
			Ellipse:
				size: 130, 130
				pos:self.center_x-65,self.center_y-65

	ActionBar:
		size:self.width, 50
		pos_hint:{"top":1}

		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos

		ActionView:
			id: _toolbar
			spacing:40

			ActionPrevious:
				color:1,0,1,1
				title:"[size=22]Menu[/size]"
				markup:True
				with_previous:False
				app_icon:"icon.png"
				app_icon_height:50
				app_icon_width:50

			ActionButton:
				icon:"Pics/info.png"
				background_color:1,0,1,.85
				text:"About"
				font_size:dp(14)
				on_release:
					root.textinfo()

			ActionButton:
				icon:"Pics/graph.png"
				background_color:1,0,1,.85
				text:"Stats"
				font_size:dp(14)
				on_release:
					root.manager.current="statsscreen"

			ActionButton:
				icon:"Pics/close.png"
				background_color:1,0,1,.85
				text:"Exit"
				font_size:dp(14)
				on_release:
					quit()


