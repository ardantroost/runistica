		Button:
			size_hint:(.1,.1)
			pos_hint:{"center_x":.8, "center_y":.1}
			text:"Push"
			font_size:12
			on_release:
				_pie3.progress +=3
				_pie3a.text="Percentage: "+ str(_pie3.progress)
		Button:
			size_hint:(.1,.1)
			pos_hint:{"center_x":.8, "center_y":.1}
			text:"Push"
			font_size:12
			on_release:
				_pie4.progress +=2
				_pie4a.text="Percentage: " + str(_pie4.progress)
		Button:
			size_hint:(.1,.1)
			pos_hint:{"center_x":.8, "center_y":.1}
			text:"Bar 2"
			font_size:12
			on_release:
				_Bar2.progress +=2 if _Bar2.progress < 100 else -100
				_Bar2a.text="Perc: " + str(_Bar2.progress)

		Button:
			size_hint:(.1,.1)
			pos_hint:{"center_x":.8, "center_y":.1}
			font_size:12
