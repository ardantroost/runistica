#: import welcome welcome

<WelcomeScreen>:
	FloatLayout:

		canvas:
			Color:
				rgba: [0,1,1,.5]
			Rectangle:
				size:self.width, self.height
				pos:self.x,self.y
			Color:
				rgba: [1,1,1,1]

			Ellipse:
				size:1000,1000
				pos:self.center_x-500,-500

			Ellipse:
				id:_LogoRunistica
				size: 400,300
				pos:self.center_x-150, 150
				source: "Pics/logorunistica.png"

		Label:
			text: "Master of runes\n [color=#271405][size=28]Learn to read the secret Runes [/color][/size]"
			font_size: dp(36)
			color:0,0,0,1
			halign: "center"
			markup: True

	AnchorLayout:
		anchor_x: "center"
		anchor_y: "bottom"

		AnchorButton:
			id:_start
			text: "Start"
			font_size:dp(18)
			bold:True
			color:[0,1,1,.5]
			background_color:[0,0,0,0]
			size_hint:(1,.1)
			on_press:
				color = [1,0,0,1] if _start.state == "active" else [0,1,1,.75]
				root.manager.current = "menuscreen"
				root.manager.transition.direction = "down"


