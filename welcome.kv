#: import welcome welcome

<WelcomeScreen>:
	FloatLayout:
		canvas:
			Color:
				rgba: [0,1,1,.5]
			Rectangle:
				size:self.width, self.height
				pos:self.x,self.y
				#source: "Pics/Woodstones.jpg"
			Color:
				rgba: [1,1,1,.3]
			Ellipse:
				size:600,650
				#size: 200,200
				pos:0,-140
				source: "Pics/sjamaan1.jpg"
			Rectangle:
				size: 300,200
				pos:40,350
				source: "Pics/Logo runistica.png"

		Label:
			text: "Master of runes\n [color=#fbffd1][size=13]Learn to read the secret Runes [/color][/size]"
			font_size: 30
			halign: "center"
			markup: True

	AnchorLayout:
		anchor_x: "center"
		anchor_y: "bottom"

		AnchorButton:
			id:_start
			text: "Start"
			font_size:18
			bold:True
			color:[1,0,0,.6]
			background_color:[0,0,0,0]
			size_hint:(1,.1)
			on_press:
				color = [1,0,0,1] if _start.state == "active" else [0,0,0,1]
				root.manager.current = "menuscreen"
				root.manager.transition.direction = "down"


