		Button:
			size_hint:(.1,.1)
			pos_hint:{"center_x":.8, "center_y":.1}
			font_size:12
			text:"BarHor 2"
			on_release:
				_BarHor2.progress +=2 if _BarHor2.progress < 100 else -100
				#_Bar3a.text="Perc: " + str(_Bar3.progress)
		Button:
			size_hint:(.1,.1)
			pos_hint:{"center_x":.8, "center_y":.1}
			font_size:12
			text:"BarHor 3"
			on_release:
				_BarHor3.progress +=2 if _BarHor3.progress < 100 else -100
				#_Bar4a.text="Perc: " + str(_Bar4.progress)

	AnchorLayout:
		anchor_x: "right"
		anchor_y: "top"

		BoxLayout:
			orientation: 'horizontal'
			padding:15
			size_hint: None, None
			size: self.minimum_size

			AnchorButton:
				text: "Menu"
				on_release:
					root.manager.current="menuscreen"

			AnchorButton:
				text: "Quit"
				on_release:
					quit()







