			pos_hint:{"center_x":.8, "center_y":.1}
			font_size:12
			text:"Bar 4"
			on_release:
				_Bar4.progress +=2 if _Bar4.progress < 100 else -100
				_Bar4a.text="Perc: " + str(_Bar4.progress)

		Button:
			size_hint:(.1,.1)
			pos_hint:{"center_x":.8, "center_y":.1}
			font_size:12
			text:"BarHor 1"
			on_release:
