#: import menu menu

<CBox@CheckBox>:
	canvas.before:
		Color:
			rgba: 1,1,1,.8
		Ellipse:
			#pos: self.center_x-11, self.center_y-11
			#size:[22,22]
			pos: self.center_x-20, self.center_y-20
			size:[40,40]
	group: "training"
	color: 1,0,0,1
	size_hint:(.2,.2)

<AnchorButton@Button>:

	text: ""
	size_hint:None,None
	size: 50,30
	color:[1,1,1,1]
	font_size:dp(12)
	background_normal: ''
	background_color:[1,1,1,0]

<MenuScreen>:
	canvas:
		Color:
			rgba: [1,0,1,.75]
		Rectangle:
			size:(self.width,self.height)
			pos:self.x,self.y
			source:"Pics/Runenlessons.png"

	BoxLayout:
		orientation: "vertical"
		padding:10
		size_hint:(1,.4)
		pos_hint:{"center_x":.5,"center_y":.65}

		Label:
			text: "Testcenter\n [size=24]Take tests and become a Master in Runes[/size]"
			font_size:dp(32)
			markup:True
			halign:"center"
			size_hint:(1,.4)

		BoxLayout:
			size_hint: (1,.2)
			Label:
				text:"Runesymbols"
				font_size:dp(14)
				size_hint:(.4,.2)
				halign:"right"

			CBox:
				id:_Symbols_but
				on_active:
					root.Trainingskeuze="Runesymbols"
					_ButtonStart.text = "Start test"
			Label:
				text:''
				size_hint:(.4,.1)
		BoxLayout:
			size_hint: (1,.2)
			Label:
				text:"Runenames"
				font_size:dp(14)
				size_hint:(.4,.2)
				halign:"right"

			CBox:
				id:_Names_but

				on_active:
					root.Trainingskeuze = "SymbolNames"
					_ButtonStart.text = "Start test"

			Label:
				text:''
				size_hint:(.4,.1)
		BoxLayout:
			size_hint: (1,.2)

			Label:
				text:"Meaning of Runes"
				font_size:dp(14)
				size_hint:(.4,.2)
				halign:"right"

			CBox:
				id:_Meaning_but
				on_active:
					root.Trainingskeuze="Meaning of Runes"
					_ButtonStart.text = "Start test"
			Label:
				text:''
				size_hint:(.4,.1)

	BoxLayout:
		orientation: "vertical"
		padding:10
		size_hint: (1,.5)
		pos_hint:{"center_x":0.5, "center_y":.20}

		Label:
			size_hint:(1,.1)
		Label:
			text: "Academy for Runes\n [size=24]Select a college to learn Runes[/size]"
			font_size:dp(32)
			markup:True
			halign:"center"
			size_hint:(1,.4)

		BoxLayout:
			size_hint: (1,.2)
			Label:
				text:"Library for Runes "
				font_size:dp(14)
				size_hint:(.4,.2)
				halign:"right"

			CBox:
				id:_Symbols_college
				on_active:
					root.Trainingskeuze="College Symbols"
					_ButtonStart.text = "Start\n college"
			Label:
				text:''
				size_hint:(.4,.15)

		BoxLayout:
			size_hint: (1,.2)
			Label:
				text:"Practice Runes"
				font_size:dp(14)
				size_hint:(.4,.2)
				halign:"right"

			CBox:
				id:_Names_college
				on_active:
					root.Trainingskeuze="College Names"
					_ButtonStart.text = "Start\n college"
			Label:
				text:''
				size_hint:(.4,.1)

		Label:
			id:_keuzequizz
			text:''
			font_size:dp(14)
			halign:"center"
			size_hint:(1,1)

	#AnchorLayout:
	#	anchor_x: "center"
	#	anchor_y: "bottom"

	Button:
		id:_ButtonStart
		text:"Choose"
		font_size:dp(14)
		halign:"center"
		color: 1,1,1,1
		background_color: 1,1,1,0
		size_hint: (.4,.25)
		pos_hint:{"center_x":.5, "center_y":.08}
		on_press:
			self.color=[0,0,0,1]
			root.transport()

		canvas.before:
			Color:
				rgba: 1,1,1,.5
			Ellipse:
				size: 130, 130
				pos:self.center_x-65,self.center_y-65

	ActionBar:
		size:self.width, 50
		pos_hint:{"top":1}

		canvas:
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos

		ActionView:
			id: _toolbar
			spacing:40

			ActionPrevious:
				color:1,0,1,1
				title:"[size=16]Master of Runes[/size]"
				markup:True
				with_previous:False
				app_icon:"icon.png"
				app_icon_height:50
				app_icon_width:50

			ActionButton:
				icon:"Pics/info.png"
				background_color:1,0,1,.85
				text:"About"
				font_size:dp(14)
				on_release:
					root.textinfo()

			ActionButton:
				icon:"Pics/graph.png"
				background_color:1,0,1,.85
				text:"Stats"
				font_size:dp(14)
				on_release:
					root.manager.current="statsscreen"

			ActionButton:
				icon:"Pics/close.png"
				background_color:1,0,1,.85
				text:"Exit"
				font_size:dp(14)
				on_release:
					quit()


